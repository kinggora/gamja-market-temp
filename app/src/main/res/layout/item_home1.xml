<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/homeitem_imageview"
        android:layout_margin="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/homeitem_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="제목" />
        <TextView
            android:id="@+id/homeitem_textview_id"
            android:layout_below="@+id/homeitem_textview_title"
            android:text="아이디"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/homeitem_textview_date"
            android:layout_below="@+id/homeitem_textview_id"
            android:text="2011.11.11 11:11"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>