<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="20dp"
        android:id="@+id/infoActivity_relativeLaout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/infoActivity_imageview"
            android:layout_margin="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/infoActivity_textview_nicname"
            android:text="닉네임"
            android:textSize="20dp"
            android:layout_toRightOf="@id/infoActivity_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RatingBar
            android:id="@+id/infoActivity_ratingbar"
            android:layout_below="@+id/infoActivity_textview_nicname"
            android:layout_toRightOf="@id/infoActivity_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Holo.RatingBar.Indicator"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/infoActivity_relativeLaout1"
        android:id="@+id/infoActivity_relativeLaout_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/infoActivity_relativeLaout2"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/infoActivity_textview_name"
                android:text="이름"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/infoActivity_textview_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="이름"
                android:textColor="@android:color/darker_gray" />
            <TextView
                android:layout_below="@+id/infoActivity_textview_name"
                android:id="@+id/infoActivity_textview_email"
                android:text="이메일"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_below="@+id/infoActivity_textview_name"
                android:id="@+id/infoActivity_textview_email2"
                android:text="이메일"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:layout_below="@+id/infoActivity_textview_email"
                android:id="@+id/infoActivity_textview_number"
                android:text="전화번호"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@+id/infoActivity_textview_email"
                android:layout_alignParentRight="true"
                android:id="@+id/infoActivity_textview_number2"
                android:text="전화번호"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"/>
            <Button
                android:backgroundTint="@color/white"
                android:layout_below="@+id/infoActivity_textview_number"
                android:id="@+id/infoActivity_btn_profilemodify"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="수정하기" />
        </RelativeLayout>
        <Button
            android:backgroundTint="@color/white"
            android:layout_below="@+id/infoActivity_relativeLaout2"
            android:id="@+id/infoActivity_btn_passwordmodify"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"/>
        <Button
            android:backgroundTint="@color/white"
            android:layout_below="@+id/infoActivity_btn_passwordmodify"
            android:id="@+id/infoActivity_btn_logout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="로그아웃"/>
        <Button
            android:backgroundTint="@color/white"
            android:layout_below="@+id/infoActivity_btn_logout"
            android:id="@+id/infoActivity_btn_unregister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="탈퇴하기"/>
    </RelativeLayout>
</RelativeLayout>
