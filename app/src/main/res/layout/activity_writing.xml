<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WritingActivity">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/my_toolbar">
    </Toolbar>
    <LinearLayout
        android:id="@+id/toolbar_division"
        android:background="@color/white"
        android:layout_below="@+id/my_toolbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/addphoto_imagelist"
        android:layout_below="@id/toolbar_division"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/gallery"
            android:id="@+id/addphoto_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editText"
        android:layout_below="@+id/addphoto_imagelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/addphoto_edit_title"
                android:hint="글 제목"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

            <Button
                android:id="@+id/categoryButton"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addphoto_edit_title"
                android:text="카테고리"
                android:textAlignment="textStart"
                android:textColor="#272727" />

            <EditText
                android:id="@+id/addphoto_edit_explain"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/categoryButton"
                android:layout_marginTop="62dp"
                android:gravity="top"
                android:hint="제품설명"></EditText>
        </RelativeLayout>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/addphoto_btn_upload"
        android:text="Upload"
        android:layout_below="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>

</RelativeLayout>