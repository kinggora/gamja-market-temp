<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WritingActivity">

    <Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"></Toolbar>

    <LinearLayout
        android:id="@+id/toolbar_division"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/addphoto_imagelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/addphoto_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/gallery"></ImageView>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/addphoto_edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="글 제목"></EditText>

            <Button
                android:id="@+id/categoryButton"
                style="@android:style/Widget.DeviceDefault.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addphoto_edit_title"
                android:text="카테고리"
                android:textAlignment="textStart"
                android:textColor="#272727" />

            <EditText
                android:id="@+id/addphoto_edit_explain"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/categoryButton"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:hint="제품설명"></EditText>
        </RelativeLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/typeCheckBox_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="직거래" />

        <CheckBox
            android:id="@+id/typeCheckBox_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="택배거래" />
    </LinearLayout>

    <Button
        android:id="@+id/addphoto_btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Upload"></Button>

</LinearLayout>